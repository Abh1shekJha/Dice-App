<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_layout_background"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true">


        <ImageView
            android:id="@+id/dice_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_eight"
            android:contentDescription="@string/str_image_desc"
            android:src="@drawable/dice_empty"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/dice_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_eight"
            android:contentDescription="@string/str_image_desc_two"
            app:srcCompat="@drawable/dice_empty"
            android:layout_weight="1"/>


    </LinearLayout>



    <Button
        android:id="@+id/btn_roll_dice"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/margin_eight"
        android:backgroundTint="@color/color_button"
        android:fontFamily="serif-monospace"
        android:text="@string/Roll"
        android:textSize="30sp"
        android:textStyle="bold|italic" />



</RelativeLayout>